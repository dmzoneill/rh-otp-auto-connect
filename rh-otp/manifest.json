{
  "name": "RedHat O.T.P",
  "description": "Proof of concept for O.T.P",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "rh.png",
      "32": "rh.png",
      "48": "rh.png",
      "128": "rh.png"
    }
  },
  "icons": {
    "16": "rh.png",
    "32": "rh.png",
    "48": "rh.png",
    "128": "rh.png"
  }
}
